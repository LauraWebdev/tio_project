{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/event-grid.css') }}" />
{% endblock %}

{% block body %}
    <section class="event-grid">
        <div class="section-header">
            <h1>Events</h1>

            <div class="actions">
                <a href="{{ path('app_event_create') }}"><span class="mdi mdi-plus"></span></a>
            </div>
        </div>
        {% for event in events %}
            <div class="event">
                <div class="meta">
                    <h1>{{ event.title }}</h1>
                    <h2>{{ event.city }}</h2>
                    <p>{{ event.date|date("d.m.Y") }}</p>
                </div>

                <div class="actions">
                    <a href="{{ path('app_event_detail', {'eventId': event.id}) }}"><span class="mdi mdi-eye"></span></a>
                    <a href="{{ path('app_event_edit', {'eventId': event.id}) }}"><span class="mdi mdi-pencil"></span></a>
                    <a href="{{ path('app_event_remove', {'eventId': event.id}) }}"><span class="mdi mdi-trash-can-outline"></span></a>
                </div>
            </div>
        {% endfor %}
        {% if events|length == 0 %}
            <div class="no-items-box">
                <span class="mdi mdi-calendar-remove-outline"></span>
                <h1>Hier gibt es nichts zu sehen!</h1>
                <p>Derzeit gibt es keine Events, die du dir ansehen kÃ¶nntest.</p>
            </div>
        {% endif %}
    </section>
{% endblock %}
